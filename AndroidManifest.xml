<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.admintheweb.library"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.CAMERA" android:maxSdkVersion="19"/>
    <uses-feature android:required="true" android:name="android.hardware.camera"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity android:launchMode="standard" android:name="HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.Main"/>
                <category android:name="android.intent.category.CAR_MODE"/>
            </intent-filter>
        </activity>
        <activity 
            android:launchMode="standard" 
            android:name="NewNotebookActivity"
            android:label="@string/title_activity_new_notebook"
            android:parentActivityName="com.admintheweb.library.HomeActivity">
            <meta-data 
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.admintheweb.library.HomeActivity"/>
        </activity>
    </application>

</manifest>
